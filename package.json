{
  "name": "npm-dependency-analyzer",
  "version": "0.2.0",
  "description": "Plugin to validate dependencies, concerning their license and vulnerabities",
  "main": "index.js",
  "bin": {
    "npm-dependency-analyzer": "./bin/npm-dependency-analyzer.js"
  },
  "scripts": {
    "debug": "DEBUG=* node ./bin/npm-dependency-analyzer.js",
    "prebuild": "npm install && rimraf build/",
    "build": "npm run lint && npm test",
    "lint": "standard --fix",
    "test": "jest"
  },
  "engines": {
    "node": ">=8.6.0",
    "npm": ">=2.0.0"
  },
  "keywords": [
    "CLI",
    "vulnerabilities",
    "licenses",
    "npm",
    "build-plugin"
  ],
  "dependencies": {
    "async": "^2.6.0",
    "commander": "^2.15.1",
    "debug": "^3.1.0",
    "isomorphic-fetch": "^2.2.1",
    "read-package-tree": "^5.2.1",
    "semver": "^5.5.0",
    "spdx-correct": "^3.0.0",
    "spdx-expression-parse": "^3.0.0"
  },
  "devDependencies": {
    "jest": "^22.4.3",
    "rimraf": "^2.6.2",
    "standard": "^11.0.1"
  },
  "standard": {
    "env": [
      "jest"
    ],
    "globals": [
      "Request"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/pt-osda/npm-dependency-analyzer.git"
  },
  "author": {
    "name": "Tiago Lopes",
    "email": "tiago.m_lopes@hotmail.com"
  },
  "license": "BSD-3-Clause"
}
